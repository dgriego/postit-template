<%= render 'shared/content_title', title: 'Create New Category' %>

<% if @category.errors.any? %>
  <%= render 'shared/errors', errors: @category.errors %>
<% end %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit 'Create Category', class: 'btn btn-success' %>
  <% end %>
</div>