<div class="well">
  <%= form_tag '/login' do %>
    <div class="input-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>

    <div class="input-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>

    <div class="btn-group mt-2">
      <%= submit_tag 'Log in', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
